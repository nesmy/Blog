---
export interface Props {
  href: string
  title: string
  tag: string
  image?: string
  description?: string
}
const { href, title, tag, image = "/og.jpg", description = "" } = Astro.props as Props;
---
<a href={href} class="block card overflow-hidden hover:scale-[1.01] transition">
  <div class="aspect-[16/9] w-full bg-zinc-800/60">
    <img src={image} alt={title} class="h-full w-full object-cover" loading="lazy" />
  </div>
  <div class="p-5">
    <div class="badge">{tag}</div>
    <h3 class="mt-3 text-xl font-semibold text-white">{title}</h3>
    {description && <p class="mt-2 line-clamp-2 text-zinc-400">{description}</p>}
    <p class="mt-3 text-indigo-300 text-sm">Read more â†’</p>
  </div>
</a>
