---
export interface Props {
  href: string
  title: string
  date: string
  tag: string
  image?: string
  description?: string
}
const { href, title, date, tag, image = "/og.jpg", description = "" } = Astro.props as Props;
---
<a href={href} class="grid grid-cols-[112px,1fr] gap-4 items-center py-3 rounded-xl hover:bg-zinc-900/60 px-2">
  <div class="h-20 w-28 rounded-lg overflow-hidden bg-zinc-800/60">
    <img src={image} alt={title} class="h-full w-full object-cover" loading="lazy" />
  </div>
  <div>
    <div class="flex items-center gap-2 text-xs text-zinc-400">
      <span class="badge">{tag}</span>
      <time datetime={date}>{new Date(date).toLocaleDateString()}</time>
    </div>
    <h4 class="mt-1 text-lg font-semibold text-white">{title}</h4>
    {description && <p class="text-sm text-zinc-400 line-clamp-2 mt-1">{description}</p>}
  </div>
</a>
